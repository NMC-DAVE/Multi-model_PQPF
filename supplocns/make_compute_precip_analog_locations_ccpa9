FFLAGS77 = -c -C -O4 -fcheck=all
FFLAGS   = -C -O4 -Wall -fbounds-check -fbacktrace
FFLAGSC   = -c -C -O4

FC = gfortran
LIB = -L/opt/local/lib -L/usr/local/gfortran/lib 
INC2 = -I/usr/local/gfortran/include
INC = -I/opt/local/include

